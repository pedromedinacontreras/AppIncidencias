<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="200dp">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_nombre_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luis Rey"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="@color/rojo"/>
        <TextView
            android:id="@+id/tv_esfuerzo"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:text="8"
            android:background="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:textColor="@color/whiteColor"
            android:textAlignment="center"
            android:layout_weight="0.5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_email_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="luisrey@gmail.com"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="@color/rojo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_puesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ©cnico"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="@color/rojo"/>
        <TextView
            android:id="@+id/tv_especialidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HardWare"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="@color/rojo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Equipo que utiliza: "
            android:layout_weight="1"
            android:textColor="@color/blackColor" />
        <TextView
            android:id="@+id/tv_equipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MacBook pro"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/rojo"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimaryDark">

    </FrameLayout>

</LinearLayout>
