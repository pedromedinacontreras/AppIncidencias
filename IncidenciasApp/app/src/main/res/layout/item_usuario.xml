<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="230dp">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/contact"/>
        <TextView
            android:id="@+id/tv_nombre_usuario"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Luis Rey"
            android:textSize="20sp"
            android:layout_weight="4"
            android:textColor="@color/blackColor"/>

        <TextView
            android:id="@+id/tv_esfuerzo"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="8"
            android:background="@color/lightGray"
            android:textSize="20sp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:textColor="@color/blackColor"
            android:textAlignment="center"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/pendientes"
            android:id="@+id/imageView3" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="0sp"
            android:src="@drawable/mail"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_email_usuario"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="luisrey@gmail.com"
            android:textSize="20sp"
            android:layout_weight="6"
            android:textColor="@color/blackColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/especialidad"
            android:id="@+id/imageView2" />

        <TextView
            android:id="@+id/tv_puesto"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="TÃ©cnico"
            android:textSize="20sp"
            android:layout_weight="3"
            android:textColor="@color/blackColor"/>

        <TextView
            android:id="@+id/tv_especialidad"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="HardWare"
            android:textSize="20sp"
            android:layout_weight="3"
            android:textColor="@color/blackColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginBottom = "10sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/equipo"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Equipo que utiliza: "
            android:layout_weight="2"
            android:textColor="@color/blackColor" />

        <TextView
            android:id="@+id/tv_equipo"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="MacBook pro"
            android:layout_weight="4"
            android:textSize="18sp"
            android:textColor="@color/blackColor"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimaryDark">

    </FrameLayout>

</LinearLayout>
