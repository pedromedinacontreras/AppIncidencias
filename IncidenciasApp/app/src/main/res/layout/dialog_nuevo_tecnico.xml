<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="700dp"
    android:padding="20dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="22sp"/>
        <EditText
            android:id="@+id/edt_nombre_usuario_nuevo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:textSize="22sp"/>
        <EditText
            android:id="@+id/edt_telefono_usuario_nuevo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textSize="22sp"/>
        <EditText
            android:id="@+id/edt_correo_usuario_nuevo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textSize="22sp"/>
        <EditText
            android:id="@+id/edt_contrasena_usuario_nuevo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipo"
            android:textSize="22sp"/>
        <EditText
            android:id="@+id/edt_equipo_usuario_nuevo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Especialidad"
            android:textSize="22sp"/>
        <Spinner
            android:id="@+id/spinner_especialidad_usuario_nuevo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:entries="@array/especialidades"
            android:prompt="@string/prompt_redes">

        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.3">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Jira"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Android studio"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="XCode"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Git Lab"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Jira"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Android studio"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="XCode"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Git Lab"
            android:textSize="20sp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>