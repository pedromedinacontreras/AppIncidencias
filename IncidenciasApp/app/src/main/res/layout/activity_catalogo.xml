<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_catalogo"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.incidenciasapp.CatalogoActivity">

    <android.support.v7.widget.Toolbar
        app:titleTextColor="#FFF"
        android:id="@+id/toolbar_catalogo"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="Equipos"
        app:navigationIcon="@drawable/ic_arrow_back"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_catalogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
    </android.support.v7.widget.RecyclerView>
    <Button
        android:visibility="visible"
        android:id="@+id/btn_nuevo_catalogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight=".7"
        android:text="Nuevo catÃ¡logo"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/whiteColor"
        android:background="@color/colorPrimary"/>
</LinearLayout>
