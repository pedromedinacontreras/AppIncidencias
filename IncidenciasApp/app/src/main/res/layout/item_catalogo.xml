<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/incidencia"/>
        <TextView
            android:id="@+id/tv_titulo_incidencia"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:layout_marginLeft="10sp"
            android:text="Aquí el título"
            android:textSize="20sp"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"

        android:layout_weight="2">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/descripcion"/>
        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:layout_marginLeft="10sp"
            android:text="Aquí va la descripcion"
            android:textSize="16sp"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/tecnico"/>
        <TextView
            android:id="@+id/tv_area"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:layout_marginLeft="10sp"
            android:text="Aquí va el área"
            android:textSize="16sp"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/tv_solucion"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:layout_marginLeft="10sp"
            android:text="Aquí va la solución"
            android:textSize="16sp"
            android:lines="2"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:layout_marginBottom="10sp"
        >

        <ImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/pendientes"/>
        <TextView
            android:id="@+id/tv_esfuerzo"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="4sp"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/blackColor"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/prioridad"/>
        <TextView
            android:id="@+id/tv_prioridad"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="4sp"
            android:textSize="20dp"
            android:text="3"
            android:textAlignment="center"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#EF9A9A">

    </FrameLayout>
</LinearLayout>