<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/equipo"/>


        <TextView
            android:id="@+id/tv_nombre_equipo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_margin="20dp"
            android:paddingTop="20dp"
            android:text="Nombre del Equipo"
            android:textStyle="bold"
            android:textColor="@color/blackColor"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/brand"/>

        <TextView
            android:id="@+id/tv_marca"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:paddingTop="20dp"
            android:text="Marca del Equipo"
            android:textStyle="bold"
            android:textColor="@color/blackColor"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_numero_serie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_margin="20dp"
            android:paddingTop="20dp"
            android:text="numero de serie"
            android:textStyle="bold"
            android:textColor="@color/blackColor"
            android:textSize="18sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/caracteristicas"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/blackColor"
       android:textStyle="bold"
        android:shadowColor="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <TextView
            android:id="@+id/tv_descripciones"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blackColor"
            android:textStyle="bold"
            android:textSize="20sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_weight="1"
            android:src="@drawable/precio"/>
        <TextView
            android:id="@+id/tv_costo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/blackColor"
            android:paddingTop="40dp"
            android:text="1200.00"/>
        <ImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:src="@drawable/mail"
            android:padding="20dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_correoUsuario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="correo@gmail.com"
            android:textColor="@color/blackColor"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="40dp"/>
    </LinearLayout>

</LinearLayout>